install_git_app "$VIM_RAILS_EXTENSION_URL" "$VIM_RAILS_EXTENSION_PATH"
install_git_app "$VIM_RUBY_EXTENSION_URL" "$VIM_RUBY_EXTENSION_PATH"
install_git_app "$VIM_SPLITJOIN_EXTENSION_URL" "$VIM_SPLITJOIN_EXTENSION_PATH"
