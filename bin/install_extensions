install_git_app "$AUTOFILENAME_EXTENSION_URL" "$AUTOFILENAME_EXTENSION_PATH" "$AUTOFILENAME_EXTENSION_OPTIONS"

# Sublime Text - Autoprefixer
install_git_app "$AUTOPREFIXER_EXTENSION_URL" "$AUTOPREFIXER_EXTENSION_PATH"

